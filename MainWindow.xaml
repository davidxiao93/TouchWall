<Window x:Class="TouchWall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Touch Wall" 
        WindowState="Maximized"
        MinWidth="1280"
        MinHeight="720"
        Closing="MainWindow_Closing">
    <Window.Resources>
        <SolidColorBrush x:Key="BlackBrush" Color="#ff000000"/>
        <Style TargetType="{x:Type Image}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="5" RadiusY="0.75">
                        <GradientStop Color="#FF077AFF" Offset="1" />
                        <GradientStop Color="#FFD4E4FF" Offset="0.52" />
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Foreground" Value="#FF000000"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" SpreadMethod="Pad" ColorInterpolationMode="SRgbLinearInterpolation">
                <GradientStop Color="#FF055EFF" Offset="0"/>
                <GradientStop Color="#FFFFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Viewbox Grid.Row="0" Grid.RowSpan="12" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="-44 0 -44 0">
            <Viewbox.RenderTransform>
                <MatrixTransform>
                    <MatrixTransform.Matrix >
                        <Matrix OffsetX="0" OffsetY="0" M11="0" M12="-1" M21="-1" M22="0"/>
                    </MatrixTransform.Matrix>
                </MatrixTransform>
            </Viewbox.RenderTransform>
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill"/>
        </Viewbox>

        <Label Grid.Row="0" Grid.Column="5" Name="WallTopLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Button Grid.Row="0" Grid.Column="4" Content="Down" Click="WallTop_ClickDown" FontSize="20"/>
        <Button Grid.Row="0" Grid.Column="6" Content="Up" Click="WallTop_ClickUp" FontSize="20"/>
        <Button Grid.Row="0" Grid.Column="7" Content="Calibrate" Click="WallTop_ClickUp" FontSize="20"/>

        <Label Grid.Row="1" Grid.Column="5" Name="WallLeftLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Button Grid.Row="1" Grid.Column="4" Content="Left" Click="WallLeft_ClickLeft" FontSize="20"/>
        <Button Grid.Row="1" Grid.Column="6" Content="Right" Click="WallLeft_ClickRight" FontSize="20"/>
        <Button Grid.Row="1" Grid.Column="7" Content="Calibrate" Click="WallLeft_ClickRight" FontSize="20"/>

        <Label Grid.Row="2" Grid.Column="5" Name="WallRightLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Button Grid.Row="2" Grid.Column="4" Content="Left" Click="WallRight_ClickLeft" FontSize="20"/>
        <Button Grid.Row="2" Grid.Column="6" Content="Right" Click="WallRight_ClickRight" FontSize="20"/>
        <Button Grid.Row="2" Grid.Column="7" Content="Calibrate" Click="WallRight_ClickRight" FontSize="20"/>

        <Label Grid.Row="3" Grid.Column="5" Name="WallBottomLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Button Grid.Row="3" Grid.Column="4" Content="Down" Click="WallBottom_ClickDown" FontSize="20"/>
        <Button Grid.Row="3" Grid.Column="6" Content="Up" Click="WallBottom_ClickUp" FontSize="20"/>
        <Button Grid.Row="3" Grid.Column="7" Content="Calibrate" Click="WallBottom_ClickUp" FontSize="20"/>

        <Button Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="4" Name="CalibrateButton" Content="{Binding Text}" Click="Calibrate_Click" FontSize="20"/>
        
        <Button Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="4" Name="ToggleCursorButton" Content="{Binding Text}" Click="Toggle_Cursor" FontSize="20"/>
        
        <Button Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="4" Name="ToggleDepthTouchButton" Content="{Binding Text}" Click="Toggle_DepthTouch" FontSize="20"/>
        
        <Button Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="4" Name="ToggleMultiTouchButton" Content="{Binding Text}" Click="Toggle_MultiTouch" FontSize="20"/>
        
        <Button Grid.Row="8" Grid.Column="4" Grid.ColumnSpan="4" Name="LaunchTouchdevelopButton" Content="Launch Touchdevelop" Click="Launch_Touchdevelop" FontSize="20"/>

        <Label Grid.Row="9" Grid.RowSpan="3" Grid.Column="4" Grid.ColumnSpan="2" Name="CoordinatesLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" FontSize="25"/>
        
        <Label Grid.Row="9" Grid.RowSpan="3" Grid.Column="6" Grid.ColumnSpan="2" Name="CalibrateStatusLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" FontSize="25"/>

        <StatusBar Grid.Row="11" Grid.Column="4" Grid.ColumnSpan="4" Margin="0 0 0 0" HorizontalAlignment="Stretch" x:Name="StatusBar" VerticalAlignment="Bottom" Background="White" Foreground="{StaticResource BlackBrush}">
            <StatusBarItem Content="{Binding StatusText}" FontSize="25"/>
        </StatusBar>
    </Grid>
</Window>

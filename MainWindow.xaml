<Window x:Class="TouchWall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Touch Wall" 
        Height="572" Width="900" 
        Closing="MainWindow_Closing">
    <Window.Resources>
        <SolidColorBrush x:Key="BlackBrush" Color="#ff000000"/>
        <Style TargetType="{x:Type Image}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Viewbox Grid.Row="0" Grid.RowSpan="12" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="-44 0 -44 0">
            <Viewbox.RenderTransform>
                <MatrixTransform>
                    <MatrixTransform.Matrix >
                        <Matrix OffsetX="0" OffsetY="0" M11="0" M12="-1" M21="-1" M22="0"/>
                    </MatrixTransform.Matrix>
                </MatrixTransform>
            </Viewbox.RenderTransform>
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill"/>
        </Viewbox>

        <Label Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="2" Name="WallTopLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18"/>
        <Button Grid.Row="2" Grid.Column="4" Content="Down" Click="WallTop_ClickDown" FontSize="18"/>
        <Button Grid.Row="2" Grid.Column="7" Content="Up" Click="WallTop_ClickUp" FontSize="18"/>

        <Label Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="2" Name="WallLeftLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18"/>
        <Button Grid.Row="3" Grid.Column="4" Content="Left" Click="WallLeft_ClickLeft" FontSize="18"/>
        <Button Grid.Row="3" Grid.Column="7" Content="Right" Click="WallLeft_ClickRight" FontSize="18"/>

        <Label Grid.Row="4" Grid.Column="5" Grid.ColumnSpan="2" Name="WallRightLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18"/>
        <Button Grid.Row="4" Grid.Column="4" Content="Left" Click="WallRight_ClickLeft" FontSize="18"/>
        <Button Grid.Row="4" Grid.Column="7" Content="Right" Click="WallRight_ClickRight" FontSize="18"/>

        <Label Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="2" Name="WallBottomLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18"/>
        <Button Grid.Row="5" Grid.Column="4" Content="Down" Click="WallBottom_ClickDown" FontSize="18"/>
        <Button Grid.Row="5" Grid.Column="7" Content="Up" Click="WallBottom_ClickUp" FontSize="18"/>

        <Button Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="4" Name="CalibrateButton" Content="{Binding Text}" Click="Calibrate_Click" FontSize="18"/>

        <Label Grid.Row="8" Grid.RowSpan="3" Grid.Column="4" Grid.ColumnSpan="2" Name="InfoLabel" Content="{Binding Text}" HorizontalAlignment="Stretch" FontSize="25"/>
        <Label Grid.Row="8" Grid.RowSpan="3" Grid.Column="6" Grid.ColumnSpan="2" Name="InfoLabel2" Content="{Binding Text}" HorizontalAlignment="Stretch" FontSize="25"/>

        <StatusBar Grid.Row="11" Grid.Column="4" Grid.ColumnSpan="4" Margin="0 0 0 0" HorizontalAlignment="Stretch" x:Name="StatusBar" VerticalAlignment="Bottom" Background="White" Foreground="{StaticResource BlackBrush}">
            <StatusBarItem Content="{Binding StatusText}" FontSize="25"/>
        </StatusBar>
    </Grid>
</Window>
